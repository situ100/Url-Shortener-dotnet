@* Widok do skracania URL *@
@{
    ViewData["Title"] = "Skróć URL";
}
<h2> Skróć URL</h2>

<form asp-action="Create" method="post">
    <div clas = "mb-3">
    <label for ="originalUrl" class="form-label">Wprowadź oryginalny URL</label>
    <input type="url" class="form-control" id="originalUrl" name="originalUrl" placeholder="https://bardzo/dlugi/link" required />
    <span class ="text-danger">@Html.ValidationMessage("originalUrl")</span>
    </div> 
    <button type="submit" class="btn btn-primary">Skróć</button>
    </form>"

@if (TempData["ShortUrl"] is string shortUrl){
    <div class="alert alert-success mt-3" role="alert">
        Skrócony URL: <a href="@shortUrl" target="_blank">@shortUrl</a>
    </div>
}
<p class ="mt-3">
    <a asp-action="Index">Powrót do listy URL-i</a>
</p>